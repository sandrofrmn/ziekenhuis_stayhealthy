@model Ziekenhuis_StayHealthy.Models.Medicatie

@{
    ViewBag.Title = "Create";
    if (Session["function"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<link href="~/Content/createView.css" rel="stylesheet" />

<div class="background">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="wrapper-input">
        <h3 class="create-title">Medicatie Aanmaken</h3>
        <div class="wrapper-boxes">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <a class="box-desc">Naam</a> <br />

            @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "input-box" } })<br />
            @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })


            <a class="box-desc">Merk</a><br />
            @Html.EditorFor(model => model.Merk, new { htmlAttributes = new { @class = "input-box" } })<br />
            @Html.ValidationMessageFor(model => model.Merk, "", new { @class = "text-danger" })


            <a class="box-desc">Dosis</a><br />

            @Html.EditorFor(model => model.Dosis, new { htmlAttributes = new { @class = "input-box" } })<br />
            @Html.ValidationMessageFor(model => model.Dosis, "", new { @class = "text-danger" })



            <a class="box-desc">Patient_ID</a><br />

            @Html.EditorFor(model => model.Patient_ID, new { htmlAttributes = new { @class = "input-box" } })<br />
            @Html.ValidationMessageFor(model => model.Patient_ID, "", new { @class = "text-danger" })

            <input type="submit" value="Aanmaken" class="button-submit" />

            <div>
                @if (Session["function"].ToString() == "zorgverlener")
                {
                    <button class="button-back" onclick="location.href='@Url.Action("DashboardZorgverlener", "Zorgverlener" )'">Terug</button>
                }
                else
                {
                    <button class="button-back" onclick="location.href='@Url.Action("Index", "Medicatie" )'">Terug</button>
                }
            </div>
        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
