@model IEnumerable<Ziekenhuis_StayHealthy.Models.Patient>

@{
    ViewBag.Title = "Index";

    if (Session["function"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}
<link href="~/Content/indexView.css" rel="stylesheet" />
<div class="background">
    <div class="wrapper-index">
        <div class="wrapper-top">
            <h2>Patiënten overzicht</h2>

            @using (Html.BeginForm("Index", "Patient", FormMethod.Get))
            {
                <b>Zoeken op:</b> @Html.RadioButton("searchBy", "Huidige patiënten", true) <text>Huidige patiënten weergeven</text>
                @Html.RadioButton("searchBy", "Alle patiënten") <text>Alle patiënten weergeven</text>
                <input type="submit" value="Zoeken" />
            }
        </div>
    <div class="wrapper-table">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Voornaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Achternaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Geboortedatum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefoonnummer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Afdeling_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kamer_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gearchiveerd)
                </th>
                <th>Acties</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voornaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Achternaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Geboortedatum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefoonnummer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Afdeling_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kamer_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gearchiveerd)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Patiënt_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Patiënt_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Patiënt_ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
</div>