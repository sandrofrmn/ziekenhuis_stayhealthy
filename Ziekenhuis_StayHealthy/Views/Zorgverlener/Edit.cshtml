@model Ziekenhuis_StayHealthy.Models.Zorgverlener

@{
    ViewBag.Title = "Edit";
    if (Session["function"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<link href="~/Content/editView.css" rel="stylesheet" />

<div class="background">
    <div class="wrapper-input">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h3 class="create-title">Zorgverlener aanpassen</h3>
            <div class="wrapper-boxes">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <br />
                @Html.HiddenFor(model => model.Zorgverlener_ID)


                @Html.LabelFor(model => model.Naam, htmlAttributes: new { @class = "box-desc" })<br />

                @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "input-box" } })<br />
                @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })


                @Html.LabelFor(model => model.Functie, htmlAttributes: new { @class = "box-desc" })<br />

                @Html.EditorFor(model => model.Functie, new { htmlAttributes = new { @class = "input-box" } })<br />
                @Html.ValidationMessageFor(model => model.Functie, "", new { @class = "text-danger" })


                <input type="submit" value="Opslaan" class="button-submit" />

                <div>
                    <button class="button-back" onclick="location.href='@Url.Action("Index", "Zorgverlener" )'">Terug</button>
                </div>


            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
