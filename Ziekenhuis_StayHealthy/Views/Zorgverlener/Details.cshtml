@model Ziekenhuis_StayHealthy.Models.Zorgverlener

@{
    ViewBag.Title = "Details";
    var firstLetter = Model.Naam.First();

    if (Session["function"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<link href="~/Content/detailsView.css" rel="stylesheet" />

<div class="wrapper-box">
    <div class="wrapper-top">
        <div class="user-eclipse">
            @firstLetter
        </div>
    </div>
    <div class="wrapper-mid">
        <h3 class="wrapper-title">Zorgverlener info</h3>
    </div> <br />

    <div class="wrapper-info" style="width: 450px">

        <a class="text-label">Naam</a>
        <div class="text-info">@Html.DisplayFor(model => model.Naam)</div> <br />

        <a class="text-label">Functie</a>
        <div class="text-info">@Html.DisplayFor(model => model.Functie)</div><br />
        <div>
            <button class="button-submit" onclick="location.href='@Url.Action("Edit","Zorgverlener", new { id = Model.Zorgverlener_ID })'">Aanpassen</button>
        </div>
        <div>
            <button class="button-back" onclick="location.href='@Url.Action("Index", "Zorgverlener" )'">Terug</button>
        </div>


    </div>
</div>