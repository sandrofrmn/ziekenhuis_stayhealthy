@model Ziekenhuis_StayHealthy.Models.Zorgverlener

@{
    ViewBag.Title = "Create";
    if (Session["function"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}
<link href="~/Content/createView.css" rel="stylesheet" />

<div class="background">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="wrapper-input">
        <h3 class="create-title">Zorgverlener aanmaken</h3>
        <div class="wrapper-boxes">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <a class="box-desc">Naam</a><br />
            @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "input-box" } })
            @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
            <br />
            <a class="box-desc">Functie</a><br />

            @Html.EditorFor(model => model.Functie, new { htmlAttributes = new { @class = "input-box" } })
            @Html.ValidationMessageFor(model => model.Functie, "", new { @class = "text-danger" })
            <br />
            <input type="submit" value="Aanmaken" class="button-submit" />

            <div>
                <button class="button-back" onclick="location.href='@Url.Action("DashboardAdministratie", "Home" )'">Terug</button>
            </div>
        </div>
    </div>
    }   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
